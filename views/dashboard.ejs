<% layout("/layout/boilarplate") %>

<div class="container py-5">
    
    <div class="row">
        
        <div class="col-lg-4 mb-4 mb-lg-0">
            <div class="card p-4 rounded-4 shadow-sm bg-light h-100">
                <h2 class="fw-bold text-success mb-1">Hello, <%= currentUser %>!</h2>
                <p class="text-muted mb-4">Ready to analyze your soil?</p>

                <h5 class="text-secondary mb-3">Start New Analysis</h5>
                <div class="d-grid gap-2">
                    <a href="/expert" class="btn btn-success btn-lg">
                        <i class="fas fa-microscope me-2"></i> Expert Mode
                    </a>
                    <a href="/basic" class="btn btn-outline-success btn-lg">
                        <i class="fas fa-seedling me-2"></i> Basic Mode
                    </a>
                </div>
                
                <hr class="my-4">
                
                <small class="text-muted">Analyze. Predict. Grow.</small>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card p-4 rounded-4 shadow-lg">
                <h4 class="mb-4 fw-bold text-primary">
                    <i class="fas fa-history me-2"></i> Your Past Reports
                </h4>

                <% if (reports.length === 0) { %>
                    <div class="alert alert-info text-center py-4 border-0">
                        <p class="mb-0 lead">No soil analysis reports found yet.</p>
                        <p class="mb-0 text-muted">Click a button on the left to start your first analysis!</p>
                    </div>
                <% } else { %>
                    
                    <ul class="list-group list-group-flush">
                        <% reports.forEach(r => { %>
                            <a href="/report/<%= r._id %>" class="list-group-item list-group-item-action py-3">
                                <div class="d-flex w-100 justify-content-between align-items-center">
                                    <div>
                                        <span class="badge bg-secondary me-2"><%= r.mode.toUpperCase() %></span>
                                        <strong class="text-dark"><%= r.city %></strong>
                                    </div>
                                    <small class="text-muted"><%= new Date(r.createdAt).toLocaleDateString() %></small>
                                </div>
                                <p class="mb-1 mt-1">
                                    <i class="fas fa-leaf text-success me-1"></i>
                                    <span class="text-success fw-bold"><%= r.output.prediction %></span>
                                </p>
                                
                            </a>
                        <% }) %>
                    </ul>
                <% } %>
            </div>
        </div>
    </div>
</div>